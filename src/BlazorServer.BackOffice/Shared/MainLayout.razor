@using BlazorServer.BackOffice.Templates;
@inherits LayoutComponentBase

<PageTitle>BlazorServer.BackOffice</PageTitle>

<MudThemeProvider Theme="MercaTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Notes" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudImage Src="/img/logo.svg" Alt="Mony the dog" Class="" Height="45" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Rounded.Logout" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="1">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="my-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>


@code {
    MudTheme MercaTheme = MudCustomTemplate.GetTemplate();

    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}