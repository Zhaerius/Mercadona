@page "/article/create"
@using BlazorServer.BackOffice.Models;
@inherits CreateArticleBase

<MudText Typo="Typo.h4" Class="mb-8">Creation d'un article</MudText>

<EditForm Model="@ArticleToCreate" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <MudGrid Class="mb-4">
        <MudItem xs="3">
            <MudText Typo="Typo.h6">Détails</MudText>
            <MudText Typo="Typo.body2">Nom, description...</MudText>
        </MudItem>
        <MudItem xs="9">
            <MudCard Elevation="10" Class="rounded-lg px-3 py-1">
                <MudCardContent Class="d-flex flex-column gap-4">
                    <MudTextField Variant="Variant.Outlined" @bind-Value="ArticleToCreate.Name" For="@(() => ArticleToCreate.Name)" Label="Nom" Placeholder="@FakePlaceholder.Name" />
                    <MudTextField Variant="Variant.Outlined" @bind-Value="ArticleToCreate.Name" For="@(() => ArticleToCreate.Name)" Label="Description" Placeholder="@FakePlaceholder.Description" T="string" Lines="5" />
                    <MudSelect @bind-Value="ArticleToCreate.CategoryId" T="Guid?" Placeholder="@FakePlaceholder.CategoryName" Variant="Variant.Outlined" Label="Catégorie" AnchorOrigin="Origin.BottomCenter">
                        @if (Categories is not null)
                        {
                            @foreach (var category in Categories)
                            {
                                <MudSelectItem T="Guid?" Value="@category.Id">@category.Name</MudSelectItem>
                            }
                        }
                    </MudSelect>
                    <MudTextField Variant="Variant.Outlined" @bind-Value="ArticleToCreate.Name" For="@(() => ArticleToCreate.Name)" Label="Image" />
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

    <MudGrid>
        <MudItem xs="3">
            <MudText Typo="Typo.h6">Prix</MudText>
            <MudText Typo="Typo.body2">Prix de vente et promotions</MudText>
        </MudItem>
        <MudItem xs="9">
            <MudCard Elevation="10" Class="rounded-lg px-3 py-1">
                <MudCardContent Class="d-flex flex-column gap-4">
                    <MudTextField Variant="Variant.Outlined" @bind-Value="ArticleToCreate.BasePrice" For="@(() => ArticleToCreate.BasePrice)" Label="Prix de base" />
                    <MudSelect T="string" Variant="Variant.Outlined" Label="Promotions" AnchorOrigin="Origin.BottomCenter">
                        <MudSelectItem Value="@("Chaussures")" />
                        <MudSelectItem Value="@("Fruit")" />
                        <MudSelectItem Value="@("Légumes")" />
                    </MudSelect>
                    <MudTextField Variant="Variant.Outlined" @bind-Value="ArticleToCreate.Name" For="@(() => ArticleToCreate.Name)" Label="Prix calculé" Disabled Placeholder="@FakePlaceholder.BasePrice.ToString()" />
                 </MudCardContent>
             </MudCard>
         </MudItem>
     </MudGrid>

     <MudGrid Class="my-4">
         <MudItem xs="3">
         </MudItem>
         <MudItem xs="9" Class="d-flex justify-space-between flex-grow-1">
             <MudSwitch @bind-Checked="@FakePlaceholder.Publish" Color="Color.Primary" Label="Publié" />
             <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Valider</MudButton>
         </MudItem>
     </MudGrid>





 </EditForm>