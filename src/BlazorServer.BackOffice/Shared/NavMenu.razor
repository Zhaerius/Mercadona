@inherits NavMenuBase;

<MudNavMenu Rounded="true" Margin="Margin.Dense" Color="Color.Primary" Class="pa-2">
    <MudStack Row="true" Class="pa-2">
        <MudAvatar Class="text-uppercase" Color="Color.Secondary">@nameLetter</MudAvatar>
        <MudStack Justify="Justify.Center" Spacing="0">
            <MudText Color="Color.Secondary" Class="text-uppercase" Typo="Typo.subtitle2">@shortName</MudText>
            <MudText Typo="Typo.caption">@roles</MudText>
        </MudStack>
    </MudStack>

    <MudDivider Class="my-2" />
    <MudNavGroup Title="Gestion" Expanded="true" ExpandIcon="@Icons.Material.Filled.KeyboardArrowDown" Icon="@Icons.Material.TwoTone.CorporateFare">
        <MudNavLink Href="/article/search" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.TwoTone.LocalMall">Articles</MudNavLink>
        <MudNavLink Href="/category/search" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.TwoTone.Kitchen">Catégories</MudNavLink>
        <MudNavLink Href="/promotion/search" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.TwoTone.MonetizationOn">Promotions</MudNavLink>
    </MudNavGroup>
    <AuthorizeView Policy="RequireAdmin">
        <Authorized>
            <MudDivider Class="my-2" />
            <MudNavGroup Title="Admin" Expanded="true" ExpandIcon="@Icons.Material.Filled.KeyboardArrowDown" Icon="@Icons.Material.TwoTone.AdminPanelSettings">
                <MudNavLink Href="/user" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.TwoTone.SupervisedUserCircle">Utilisateurs</MudNavLink>
            </MudNavGroup>
        </Authorized>
    </AuthorizeView>
</MudNavMenu>