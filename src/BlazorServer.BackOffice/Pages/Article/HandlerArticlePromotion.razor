@page "/article/handler-promotion/{Id:guid}"
@inherits HandlerArticlePromotionBase

<MudGrid Justify="Justify.Center">
    <MudItem xs="6">
        @if (ArticleWithPromotions is not null)
        {
            <MudDataGrid Items="@ArticleWithPromotions.Promotions">
                <Columns>
                    <PropertyColumn Property="x => x.Name"/>
                    <PropertyColumn Property="x => x.Start" />
                    <PropertyColumn Property="x => x.End" />
                    <PropertyColumn Property="x => x.Discount" />
                </Columns>
            </MudDataGrid>
        }
    </MudItem>
    <MudItem xs="6">

    </MudItem>
</MudGrid>